generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Venue {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  location  String
  capacity  Int
  price     Float
  bookings  Booking[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  isDeleted  Boolean  @default(false)

  @@index([id, name, location, capacity, price, isDeleted])
}

model Booking {
  id             Int     @id @default(autoincrement())
  venue          Venue   @relation(fields: [venueId], references: [id])
  venueId        Int
  companyName    String
  email          String
  startDate      DateTime
  endDate        DateTime
  attendeeCount  Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isDeleted      Boolean  @default(false)

  @@index([id, venueId, email, companyName, isDeleted])
}